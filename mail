    <script>
        // Base API URL - replace with your actual backend endpoint
        const API_BASE_URL = 'https://api.yourdomain.com/v1';
        
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Lead list generator
        const leadList = document.getElementById('leadList');
        const leads = [
            { name: "John Smith", email: "john.smith@example.com", company: "TechCorp" },
            { name: "Sarah Johnson", email: "sarahj@business.com", company: "Global Solutions" },
            { name: "Michael Brown", email: "michael@agency.io", company: "Creative Agency" },
            { name: "Emily Davis", email: "emilyd@consulting.com", company: "Strategic Consulting" },
            { name: "Robert Wilson", email: "robertw@tech.net", company: "Innovate Labs" },
            { name: "Jennifer Lee", email: "jennifer.lee@marketing.com", company: "Digital Marketing Co" },
            { name: "David Thompson", email: "dthompson@services.com", company: "Professional Services Inc" }
        ];

        function generateLeadList() {
            leadList.innerHTML = '';
            leads.forEach(lead => {
                const leadItem = document.createElement('div');
                leadItem.className = 'lead-item border-b border-gray-200 last:border-0 p-4 hover:bg-gray-50';
                leadItem.innerHTML = `
                    <div class="flex items-start">
                        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16" />
                        <div class="ml-4">
                            <p class="font-medium text-gray-900">${lead.name}</p>
                            <p class="text-gray-600">${lead.email}</p>
                            <div class="flex items-center mt-1">
                                <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded mr-2">Verified</span>
                                <span class="text-sm text-gray-500">${lead.company}</span>
                            </div>
                        </div>
                    </div>
                `;
                leadList.appendChild(leadItem);
            });
        }

        generateLeadList();

        // Import leads to sender
        document.getElementById('importLeads').addEventListener('click', function() {
            const emails = leads.map(lead => lead.email).join(', ');
            document.getElementById('recipients').value = emails;
            
            // Create notification
            const notification = document.createElement('div');
            notification.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg';
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    <span>254 leads imported to email sender</span>
                </div>
            `;
            document.body.appendChild(notification);
            
            // Remove notification after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        });

        // Email sending with actual API
        document.getElementById('emailForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const button = document.getElementById('sendEmail');
            const originalText = button.innerHTML;
            
            button.innerHTML = '<i class="fas fa-circle-notch fa-spin mr-2"></i> Sending emails...';
            button.classList.add('sending-pulse');
            button.disabled = true;
            
            try {
                const recipients = document.getElementById('recipients').value.split(',').map(e => e.trim());
                const subject = document.getElementById('emailSubject').value;
                const content = document.getElementById('emailContent').value;
                
                const response = await axios.post(`${API_BASE_URL}/emails/send`, {
                    fromName: document.getElementById('fromName').value,
                    fromEmail: document.getElementById('fromEmail').value,
                    recipients,
                    subject,
                    content,
                    isHtml: true
                });

                showNotification(response.data.message || 'Emails sent successfully!', 'success');
                
                // Update analytics in real-time
                const analytics = response.data.analytics;
                if (analytics) {
                    document.querySelector('.emails-sent-today').textContent = analytics.sentToday;
                    document.querySelector('.emails-sent-limit').textContent = `/${analytics.dailyLimit} limit`;
                    document.querySelector('.emails-sent-progress').style.width = `${analytics.usagePercentage}%`;
                }
                
            } catch (error) {
                showNotification(error.response?.data?.message || 'Failed to send emails', 'error');
                console.error('Email sending error:', error);
            } finally {
                button.innerHTML = originalText;
                button.classList.remove('sending-pulse');
                button.disabled = false;
            }
        });

        // Notification helper function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed bottom-4 right-4 px-4 py-2 rounded-lg shadow-lg ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            } text-white`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>
                    <span>${message}</span>
                </div>
            `;
            document.body.appendChild(notification);
            setTimeout(() => notification.remove(), 5000);
        }

        // Real lead extraction from API
        document.getElementById('extractLeads').addEventListener('click', async function() {
            const button = this;
            const urlInput = document.getElementById('websiteUrl');
            
            if (!urlInput.value || !urlInput.value.startsWith('http')) {
                showNotification('Please enter a valid website URL', 'error');
                return;
            }

            button.innerHTML = '<i class="fas fa-circle-notch fa-spin mr-1"></i> Extracting...';
            button.disabled = true;
            
            try {
                const response = await axios.post(`${API_BASE_URL}/leads/extract`, {
                    url: urlInput.value,
                    filters: {
                        industry: document.getElementById('industryFilter').value,
                        location: document.getElementById('locationFilter').value
                    }
                });
                
                showNotification(`${response.data.count} leads extracted successfully!`, 'success');
                displayLeads(response.data.leads);
                
            } catch (error) {
                showNotification(error.response?.data?.message || 'Failed to extract leads', 'error');
            } finally {
                button.innerHTML = 'Extract';
                button.disabled = false;
            }
        });

        // Display extracted leads
        function displayLeads(leads) {
            const leadList = document.getElementById('leadList');
            leadList.innerHTML = '';
            
            leads.forEach(lead => {
                const leadItem = document.createElement('div');
                leadItem.className = 'lead-item border-b border-gray-200 last:border-0 p-4 hover:bg-gray-50';
                leadItem.innerHTML = `
                    <div class="flex items-start">
                        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16 flex items-center justify-center">
                            <i class="fas fa-user text-gray-500 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="font-medium text-gray-900">${lead.name || 'Unknown'}</p>
                            <p class="text-gray-600">${lead.email}</p>
                            <div class="flex items-center mt-1">
                                <span class="text-xs ${lead.valid ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'} px-2 py-1 rounded mr-2">
                                    ${lead.valid ? 'Verified' : 'Unverified'}
                                </span>
                                ${lead.company ? `<span class="text-sm text-gray-500">${lead.company}</span>` : ''}
                            </div>
                        </div>
                    </div>
                `;
                leadList.appendChild(leadItem);
            });
        }
    </script>
</body>
</html>
